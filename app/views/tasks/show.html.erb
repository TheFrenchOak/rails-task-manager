<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<div>
<p>
<% if @task.completed %>
  <i class="far fa-check-square"></i>
<% else %>
  <i class="far fa-square"></i>
<% end %>
<%= @task.completed ? "This task is completed" : "This task is not completed" %>
</p>
</div>
<p><%= link_to 'Update task', edit_path(@task) %></p>
<p><%= link_to 'Back to list', tasks_path %></p>