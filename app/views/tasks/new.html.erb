<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div class="form-group">
    <%= f.submit "Add", class: "btn-primary" %>
  </div>
<% end %>
<p><%= link_to 'Back to list', tasks_path %></p>