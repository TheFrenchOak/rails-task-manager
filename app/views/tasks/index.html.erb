<h1>My tasks</h1>
<% @tasks.each do |task| %>
<div>
<% if task.completed %>
  <i class="far fa-check-square"></i>
<% else %>
  <i class="far fa-square"></i>
<% end %>
<%= link_to task.title, task_path(task) %>
.
<%= link_to destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
  <i class="far fa-trash-alt"></i>
<% end %>
</div>
<% end %>
<p><%= link_to "<p><i class='fas fa-plus'></i> Add a new task".html_safe, new_path %></p>